<h1>Recipe: <%= recipe.name %></h1>
<dl>
  <% if recipe.servings %>
  <dt id="servings">Servings:</dt>
  <dd><%= recipe.servings %></dd>
  <% end %>
  <% if recipe.preptime %>
  <dt id="preptime">Prep time:</dt>
  <dd><%= recipe.preptime %></dd>
  <% end %>
  <% if recipe.cooktime %>
  <dt id="cooktime">Cook time:</dt>
  <dd><%= recipe.cooktime %></dd>
  <% end %>
</dl>
<%= erb :'recipes/_equipment',   locals: { equipment:   recipe.equipment } %>
<%= erb :'recipes/_ingredients', locals: { ingredients: recipe.ingredients } %>
<%= erb :'recipes/_directions',  locals: { directions:  recipe.directions } %>
