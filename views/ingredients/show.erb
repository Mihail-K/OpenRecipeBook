<h1>Ingredient: <%= ingredient.name %></h1>
<% ingredient.products&.each_with_index do |product, index| %>
  <h2><%= product['name'] %></h2>
  Purchasing options:
  <ul>
  <% product['stores']&.each_with_index do |store, index| %>
    <li><a href="<%= store['link'] || '#' %>"><%= store['name'] %></a></li>
  <% end %>
  </ul>
<% end %>
